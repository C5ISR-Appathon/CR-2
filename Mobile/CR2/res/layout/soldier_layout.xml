<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/american_flag" >

    <TextView
        android:id="@+id/titleSoldierSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#99000000"
        android:text="Soldier Sign-up"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/firstNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleSoldierSignup"
        android:layout_marginTop="17dp"
        android:background="#99000000"
        android:text="First Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/emailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lastNameLabel"
        android:layout_marginTop="36dp"
        android:background="#99000000"
        android:text="E-Mail"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/militaryBranchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rankLabel"
        android:layout_alignBottom="@+id/rankLabel"
        android:layout_alignParentLeft="true"
        android:background="#99000000"
        android:text="Military Branch"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/noOfTroops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/militaryBranchLabel"
        android:layout_marginTop="37dp"
        android:background="#99000000"
        android:text="No. Of Troops"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/lastNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/firstNameLabel"
        android:layout_alignBottom="@+id/firstNameLabel"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/militaryBranchLabel"
        android:background="#99000000"
        android:text="Last Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/birthdateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/emailLabel"
        android:layout_alignBottom="@+id/emailLabel"
        android:layout_alignLeft="@+id/lastNameLabel"
        android:background="#99000000"
        android:text="Birthdate"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/rankLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/birthdateLabel"
        android:layout_below="@+id/birthdateLabel"
        android:layout_marginTop="38dp"
        android:background="#99000000"
        android:text="Rank"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/deployAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/noOfTroops"
        android:layout_marginTop="32dp"
        android:background="#99000000"
        android:text="Deployed Mailing Address"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lastNameLabel"
        android:layout_below="@+id/lastNameLabel"
        android:background="#ffffffff"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstNameLabel"
        android:layout_toLeftOf="@+id/lastNameLabel"
        android:background="#ffffffff"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/birthdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/birthdateLabel"
        android:layout_below="@+id/birthdateLabel"
        android:background="#ffffffff"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/birthdate"
        android:layout_alignBottom="@+id/birthdate"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/lastNameLabel"
        android:background="#ffffffff"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/militaryBranchLabel"
        android:layout_toLeftOf="@+id/lastNameLabel"
        android:background="#ffffffff"
        android:ems="10" >

    </EditText>

    <EditText
        android:id="@+id/rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rankLabel"
        android:layout_alignTop="@+id/branch"
        android:background="#ffffffff"
        android:ems="10" >

    </EditText>

    <EditText
        android:id="@+id/numberOfTroops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/branch"
        android:layout_below="@+id/noOfTroops"
        android:background="#ffffffff"
        android:ems="10" />

    <EditText
        android:id="@+id/deployedMailingAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/deployAddr"
        android:background="#ffffffff"
        android:ems="10" />

</RelativeLayout>